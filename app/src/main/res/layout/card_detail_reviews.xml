<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_gral_cards"
    android:layout_marginRight="@dimen/margin_gral_cards"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@color/header_detail"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/title_synopsis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/empty_reviews"
            android:textSize="@dimen/text_description"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:id="@+id/tv_empty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:id="@+id/ll_reviews"></LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>